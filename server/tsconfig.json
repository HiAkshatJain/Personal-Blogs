{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],                
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],              
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,            
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
